<style-scheme id="<%= @theme_name.downcase.gsub(/[^a-zA-Z0-9]/, "") %>" _name="<%= @theme_name %>" version="1.0">
  <author>Textmate2Gtksourceview</author>
  <_description>Generated from textmate theme with tm2gtksw2 (http://github.com/lexrupy/tm2gtksw2/tree/master)</_description>

  <!-- Global Settings -->
  <style name="selection"         background="<%= @color_selection %>"/>
  <style name="text"              foreground="<%= @color_foreground %>" background="<%= @color_background %>"/>
  <style name="cursor"            foreground="<%= @color_caret %>"/>
  <style name="current-line"      background="<%= @color_lineHighlight %>"/>
  <style name="line-numbers"      foreground="<%= @color_foreground %>" background="<%= @color_background %>"/>

  <!-- Bracket Matching -->
  <style name="bracket-match" <%= @color_brkmatch %>/>
  <style name="bracket-mismatch" <%= @color_brkmatch %> bold="true"/>
  <style name="search-match" <%= @color_searchmatch %>/>

  <!-- Comments -->
  <style name="def:comment" <%= @color_comment %>/>
  <style name="def:shebang" <%= @color_comment %>/>
  <style name="def:doc-comment-element" <%= @color_comment %>/>

  <!-- Constants and Variables-->
  <style name="def:constant" <%= @color_constant %>/>
  <style name="def:string" <%= @color_string %>/>
  <style name="def:special-char" foreground="<%= @color_foreground %>"/>
  <style name="def:special-constant" <%= @color_special_constant %>/>
  <style name="def:instance-variable" <%= @color_variable %>/>
  <style name="def:boolean" <%= @color_special_constant %>/>
  <style name="def:number" <%= @color_number %>/>
  <style name="def:floating-point" <%= @color_number %>/>
  <style name="def:keyword" <%= @color_keyword %>/>
  <style name="def:builtin" <%= @color_function %>/>
  <style name="def:variable" <%= @color_variable %>/>
  <style name="def:class-variable" <%= @color_variable %>/>
  <style name="def:identifier" <%= @color_variable %>/>
  <style name="def:statement" <%= @color_constant %>/>
  <style name="def:type" <%= @color_constant %>/>
  <style name="def:error" <%= @color_error %>/>
  <style name="def:note" <%= @color_note %>/>
  <style name="def:net-address-in-comment" <%= @color_variable %>/>
  <style name="def:preprocessor" <%= @color_keyword %>/>
  <style name="def:specials" <%= @color_class %>/>

  <!-- Ruby Styles -->
  <style name="ruby:module-handler" <%= @color_modulehandl %>/>
  <style name="ruby:regex" <%= @color_regexp %>/>
  <style name="ruby:class-definition" <%= @color_class %>/>
  <style name="ruby:simple-interpolation" <%= @color_interpolat %>/>
  <style name="ruby:complex-interpolation" <%= @color_interpolat %>/>
  <style name="ruby:function-definition" <%= @color_function %>/>
  <style name="ruby:special-variable" <%= @color_variable %>/>
  <style name="ruby:predefined-variable" <%= @color_markup %>/>
  <style name="ruby:global-variable" <%= @color_variable %>/>
  <style name="ruby:instance-variable" <%= @color_variable %>/>
  <style name="ruby:class-variable" <%= @color_variable %>/>
  <style name="ruby:operators" <%= @color_keyword %>/>
  <style name="ruby:symbol" <%= @color_symbol %>/>

  <!-- YAML Styles -->
  <style name="yaml:inner-key" <%= @color_symbol %>/>
  <style name="yaml:scalar-value" <%= @color_string %>/>

  <!-- Rails Styles -->
  <style name="rubyonrails:module-handler" <%= @color_modulehandl %>/>
  <style name="rubyonrails:regex" <%= @color_regexp %>/>
  <style name="rubyonrails:class-definition" <%= @color_class %>/>
  <style name="rubyonrails:simple-interpolation" <%= @color_interpolat %>/>
  <style name="rubyonrails:complex-interpolation" <%= @color_interpolat %>/>
  <style name="rubyonrails:function-definition" <%= @color_function %>/>
  <style name="rubyonrails:special-variable" <%= @color_variable %>/>
  <style name="rubyonrails:predefined-variable" <%= @color_markup %>/>
  <style name="rubyonrails:global-variable" <%= @color_variable %>/>
  <style name="rubyonrails:instance-variable" <%= @color_variable %>/>
  <style name="rubyonrails:class-variable" <%= @color_variable %>/>
  <style name="rubyonrails:operators" <%= @color_keyword %>/>
  <style name="rubyonrails:symbol" <%= @color_symbol %>/>
  <style name="rubyonrails:rails" <%= @color_constant %>/>

  <!-- Diff Settings -->
  <style name="diff:added-line" <%= @color_diffadd %>/>
  <style name="diff:removed-line" <%= @color_diffrm %>/>
  <style name="diff:location" <%= @color_diffhdr %>/>
  <style name="diff:ignore" <%= @color_diffhdr %>/>
  <style name="diff:changed-line" <%= @color_symbol %>/>
  <style name="diff:diff-file" <%= @color_keyword %>/>
  <style name="diff:special-case" map-to="diff:location"/>

  <!-- SH Styles -->
  <style name="sh:others" map-to="text"/>

  <!-- C Styles -->
  <style name="c:preprocessor" map-to="def:special-char"/>

  <!-- XML Styles -->
  <style name="xml:attribute-name" <%= @color_function %>/>
  <style name="xml:element-name" <%= @color_markup %>/>
  <style name="xml:attribute-value" <%= @color_string %>/>
</style-scheme>
